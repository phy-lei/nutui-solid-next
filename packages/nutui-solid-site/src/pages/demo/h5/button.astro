---
import MobileLayout from '@/layouts/MobileLayout.astro';
import Demo from '@/components/Demo.astro';
import Demo1 from '~/nutui-solid/src/components/button/demos/h5/demo1';
import Demo2 from '~/nutui-solid/src/components/button/demos/h5/demo2';
import Demo3 from '~/nutui-solid/src/components/button/demos/h5/demo3';
import Demo4 from '~/nutui-solid/src/components/button/demos/h5/demo4';
import Demo5 from '~/nutui-solid/src/components/button/demos/h5/demo5';
import Demo6 from '~/nutui-solid/src/components/button/demos/h5/demo6';
import Demo7 from '~/nutui-solid/src/components/button/demos/h5/demo7';
import Demo8 from '~/nutui-solid/src/components/button/demos/h5/demo8';
import Demo9 from '~/nutui-solid/src/components/button/demos/h5/demo9';

const useTranslate = (obj) => {
  return [obj['zh-CN']];
};
const [translated] = useTranslate({
  'zh-CN': {
    type: '按钮类型',
    plain: '朴素按钮',
    disabled: '禁用状态',
    shape: '按钮形状',
    loading: '加载状态',
    icon: '图标按钮',
    size: '按钮尺寸',
    block: '块级元素',
    color: '自定义颜色',
  },
  'en-US': {
    type: 'Type',
    plain: 'Plain',
    disabled: 'Disabled',
    shape: 'Shape',
    loading: 'Loading',
    icon: 'Icon',
    size: 'Size',
    block: 'Block',
    color: 'Custom Color',
  },
});
---

<MobileLayout>
  <Demo class="demo-button">
    <h2>{translated.type}</h2>
    <Demo1 client:only="client" />

    <h2>{translated.plain}</h2>
    <Demo2 client:only="client" />

    <h2>{translated['disabled']}</h2>
    <Demo3 client:only="client" />

    <h2>{translated['shape']}</h2>
    <Demo4 client:only="client" />

    <h2>{translated.loading}</h2>
    <Demo5 client:only="client" />

    <h2>{translated.icon}</h2>
    <Demo6 client:only="client" />

    <h2>{translated['size']}</h2>
    <Demo7 client:only="client" />

    <h2>{translated.block}</h2>
    <Demo8 client:only="client" />

    <h2>{translated['color']}</h2>
    <Demo9 client:only="client" />
  </Demo>
</MobileLayout>

<style lang="scss" is:global>
  .demo-button {
    .nut-button {
      margin-right: 5px;
      margin-bottom: 5px;

      &:last-child {
        margin-right: 0;
      }
    }
  }
</style>
