---
import { Code } from 'astro:components';
import DemoBlock from './DemoBlock';
import './demoblock.scss';

export const modules = import.meta.glob(
  '../../../nutui-solid/**/demos/*/*.tsx',
  {
    as: 'raw',
    eager: true,
  }
);
export interface Props {
  src: string;
}
const { src } = Astro.props;
const pathName = Astro.url.pathname.split('/');
const highlightedCode =
  modules[`../../../nutui-solid/${pathName[pathName.length - 1]}/demos/${src}`];
---

<DemoBlock client:load text={highlightedCode} scss="">
  <Code code={highlightedCode} lang="tsx" theme="github-light" />
</DemoBlock>
