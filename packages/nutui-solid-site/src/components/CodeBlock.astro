---
import { Code } from 'astro:components';
import DemoBlock from './DemoBlock';
import './demoblock.scss';

export const modules = import.meta.glob(
  '../../../nutui-solid/src/components/**/demos/*.tsx',
  {
    as: 'raw',
    eager: true,
  }
);

export interface Props {
  src: string;
}
const { src } = Astro.props;
const { title } = Astro.params;

const highlightedCode =
  modules[`../../../nutui-solid/src/components/${title}/demos/${src}`];
---

<DemoBlock client:load text={highlightedCode} scss="">
  <Code code={highlightedCode} lang="tsx" theme="github-light" />
</DemoBlock>
